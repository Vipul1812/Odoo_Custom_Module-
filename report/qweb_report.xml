<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =========================================
         ESTATE PROPERTY PDF TEMPLATE
    ========================================== -->
    <template id="estate_property_report_template">

        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">

                <!-- Current record -->
                <t t-set="o" t-value="doc"/>

                <!-- Resolve company -->
                <t t-set="company"
                   t-value="o.company_id.sudo() if o.company_id else res_company"/>

                <!-- External layout -->
                <t t-call="web.external_layout">

                    <!-- ========= CUSTOM HEADER (OVERRIDES DEFAULT) ========= -->
                    <t t-set="header">
                        <div style="border-bottom:1px solid #000; padding-bottom:10px;">
                            <table style="width:100%;">
                                <tr>

                                    <!-- LEFT : COMPANY LOGO -->
                                    <td style="width:30%; vertical-align:middle;">
                                        <img t-if="company.logo"
                                             t-att-src="image_data_uri(company.logo)"
                                             style="max-height:80px;"/>
                                    </td>

                                    <!-- RIGHT : COMPANY DETAILS -->
                                    <td style="width:70%; text-align:right; vertical-align:middle;">
                                        <div t-field="company.company_details"/>
                                    </td>

                                </tr>
                            </table>
                        </div>
                    </t>
                    <!-- ========= /CUSTOM HEADER ========= -->

                    <!-- ========= PAGE BODY ========= -->
                    <div class="page">

                        <h2 style="margin-top:20px;">Property Card</h2>
                        <p>Hello, how are you?</p>

                    </div>
                    <!-- ========= /PAGE BODY ========= -->

                </t>
            </t>
        </t>

    </template>

    <!-- =========================================
         REPORT ACTION
    ========================================== -->
    <record id="estate_property_report_action" model="ir.actions.report">
        <field name="name">Property Card</field>
        <field name="model">estate.property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">mycompany_custom.estate_property_report_template</field>
        <field name="report_file">mycompany_custom.estate_property_report_template</field>
        <field name="binding_model_id" ref="mycompany_custom.model_estate_property"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
