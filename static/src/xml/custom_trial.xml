<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="CustomtrialTemplate"
       t-inherit="web.StateSelectionField"
       t-inherit-mode="primary">

        <xpath expr="//t[@t-set-slot='toggler']/div" position="replace">
            
            <div class="d-flex align-items-center gap-2 o_state_toggler o_field_Customtrial fw-bold">
                <i t-attf-class="{{ stateIcon(currentValue) }} {{ statusColor(currentValue) }}"/>
                <span t-out="label"/>
            </div>
        </xpath>

        <xpath expr="//Dropdown" position="attributes">
            <attribute name="togglerClass">
                getTogglerClass(currentValue)
            </attribute>
        </xpath>

        <xpath expr="//DropdownItem/span[1]" position="attributes">
            <attribute name="t-attf-class">
                {{ stateIcon(option[0]) }}
            </attribute>
        </xpath>

        <xpath expr="//DropdownItem/span[2]" position="attributes">
            <!-- Added fw-bold to make the dropdown list items strong -->
            <attribute name="t-attf-class">
                {{ statusColor(option[0]) }} fw-bold
            </attribute>
        </xpath>
    </t>
</templates>
