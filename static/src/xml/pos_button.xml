<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="PriceConverter">
        <div class="p-4 shadow-sm bg-white rounded">
            <h3 >Currency Tool (onWillRender Version)</h3>
            
            <div class="mb-3">
                <label class="form-label">Amount in USD</label>
                <input type="number" 
                       class="form-control" 
                       t-att-value="state.usdAmount" 
                       t-on-input="updatePrice"/>
            </div>

            <div >
                <div class="d-flex justify-content-between">
                    <span><strong>USD:</strong> $<t t-esc="state.usdAmount"/></span>
                    <span><strong>Exchange Rate:</strong> <t t-esc="state.exchangeRate"/></span>
                </div>
                <hr/>
                <h4 class="mb-0 text-primary">
                    Total: <t t-esc="state.INRAmount"/> INR
                </h4>
            </div>
        </div>
    </t>
</templates>
















