<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="DashboardTemplate">
        <div class="p-4 shadow-sm bg-white rounded">
            <h3>Customer Statistics</h3>

            <CounterDisplay count="state.counter"/>
            <CounterDisplay count="state.counter"/>


            <div class="mt-3">
                <button class="btn btn-primary" t-on-click="incrementCounter">Incr</button>
                <button class="btn btn-danger ms-2" t-on-click="decrementCounter">Decr</button>
            </div>

            <!-- THE FIX: Wrap all cards in a single d-flex container -->
            <div class="mt-4 d-flex flex-row flex-wrap justify-content-start">
                <Card
                    title="'Total Customers'"
                    content="'We have 150 customers in our database.'"/>

                <Card
                    title="'Active Customers'"
                    content="'Currently, 120 customers are active.'"/>

                <Card
                    title="'Customer Stats'"
                    content="'This card shows how many customers we have .'"/>

                <Card title="'Safe Card'" content="htmlContent"/>


                <Card title="'Unsafe Card'" content="unsafeContent"/>   
            </div>
        </div>
    </t>

    <t t-name="CounterDisplayTemplate">
        <div class="border p-2 bg-light mb-2">
            <strong>Current Count in Child: </strong>
            <span class="text-primary" t-esc="props.count"/>
        </div>
    </t>

    <t t-name="CardTemplate">
        <!-- Cleaned up: Removed the wrapper div that was breaking the flow -->
        <div class="card m-2 shadow-sm" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title text-primary" t-esc="props.title"/>
                <p class="card-text" t-out="props.content"/>
            </div>
        </div>
    </t>

</templates>
